<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loyer.view.EditProprietaireController">
   <children>
      <HBox alignment="CENTER" layoutX="16.0" layoutY="67.0" prefHeight="72.0" prefWidth="766.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nom ">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin></Text>
            <TextField fx:id="nomProprietaire">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Prénom :">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin></Text>
            <TextField fx:id="prenomProprietaire">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ville">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="villeProprietaire" />
         </children>
      </HBox>
      <Text layoutX="28.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Modifier les informations du propriétaire qui apparaissent sur les quittances :">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Text>
      <ButtonBar layoutX="562.0" layoutY="244.0" prefHeight="40.0" prefWidth="177.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleCancel" text="Annuler" />
            <Button mnemonicParsing="false" onAction="#handleValider" text="Valider" />
        </buttons>
      </ButtonBar>
      <HBox alignment="CENTER_LEFT" layoutX="41.0" layoutY="139.0" prefHeight="72.0" prefWidth="715.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleOpen" text="Modifier la signature (120*100)">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Button>
            <ImageView fx:id="imageSignature" fitHeight="83.0" fitWidth="171.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </children>
</AnchorPane>
