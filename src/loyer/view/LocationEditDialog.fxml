          <Button mnemonicParsing="false" onAction="#handleOk" text="Valider" />
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Annuler" />
        </buttons>
      </ButtonBar>
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="81.0" prefHeight="48.0" prefWidth="460.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0">
