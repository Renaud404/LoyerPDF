                  <Font name="System Bold" size="12.0" />
               </font>
            </Text>
            <TextField fx:id="prenomLocataire" prefHeight="25.0" prefWidth="118.0" promptText="Prénom">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="nomLocataire" prefHeight="25.0" prefWidth="118.0" promptText="Nom" />
