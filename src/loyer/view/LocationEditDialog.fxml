            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Adresse :">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="noRue" alignment="CENTER" prefWidth="25.0" promptText="N°">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="nomRue" promptText="Rue">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="codePostal" prefWidth="80.0" promptText="Code Postal">
