               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="dateDebut" prefHeight="25.0" prefWidth="99.0" />
         </children>
         <padding>
            <Insets left="20.0" />
